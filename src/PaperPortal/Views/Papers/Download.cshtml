@model Paper_Portal.Models.Paper

@{
    ViewData["Title"] = "Download";
}

<h2 class="text-primary-color">@ViewData["Title"]</h2>

@{

    if (ViewBag.Verified == "False")
    {
        <h3 class="text-primary-color">Verfication Unsuccessful!</h3>
        <h4 class="text-primary-color">File Can't be downloaded.</h4>
        <h5 class="text-primary-color">It has been tampered with.</h5>

        <a class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--raised" asp-action="Index">Back to List</a>
    }
    else
    {
        <h3 class="text-primary-color">Verfication Successful!</h3>
        <div class="well col-md-10 col-md-offset-1">
            <form asp-action="Download" class="form-horizontal">
                <h4>Paper</h4>
                <hr />
                <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
                @Html.Partial("_PaperDetail")
                <div class="col-md-4 col-md-offset-4">
                    <div class="form-group">
                        <a class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--raised" asp-action="Index">Back to List</a>
                        <input type="submit" class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--primary mdl-button--raised" value="Download" />
                    </div>
                </div>
            </form>
        </div>
    }

    @section Scripts{
        <script>
            $(".input-fields").prop("disabled", true); //Disable
        </script>
    }

}
