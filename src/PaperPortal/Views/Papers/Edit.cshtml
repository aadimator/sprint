@model Paper_Portal.Models.Paper

@{
    ViewData["Title"] = "Edit";
}

<h2 class="text-primary-color">@ViewData["Title"]</h2>
<div class="well col-lg-10 col-lg-offset-1">
    <form asp-action="Edit" class="form-horizontal">
        <h4>Paper</h4>
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        @Html.Partial("_PaperDetail")
        <div class="col-md-4 col-md-offset-4">
            <div class="form-group">
                <a class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--raised" asp-action="Index">Back to List</a>
                <input type="submit" value="Save" class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--primary mdl-button--raised" />
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
