@model Paper_Portal.ViewModels.Papers.CreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create" enctype="multipart/form-data" class="form-horizontal">
    <div class="col-md-offset-2 col-md-10">
        <h4>Paper</h4>
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <div class="form-group label-floating">

            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger" />
        </div>
        <div class="form-group label-floating">
            <label asp-for="Copies" class="control-label"></label>
            <input asp-for="Copies" class="form-control" />
            <span asp-validation-for="Copies" class="text-danger" />
        </div>
        <div class="form-group label-floating">
            <label asp-for="Instructor" class="control-label"></label>
            <input asp-for="Instructor" class="form-control" />
        </div>
        <div class="form-group label-floating">
            <label asp-for="Due" class="control-label"></label>
            <input asp-for="Due" class="form-control" />
            <span asp-validation-for="Due" class="text-danger" />
        </div>
        <div class="form-group">
            <label asp-for="File" class="control-label"></label>
            <input asp-for="File" class="form-control" />
            <div class="input-group">
                <input type="text" readonly="" class="form-control" placeholder="Browse....">
            </div>
        </div>
        <div class="form-group label-floating">
            <label asp-for="Comment" class="control-label"></label>
            <textarea asp-for="Comment" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <a class="btn btn-default" asp-action="Index">Back to List</a>
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>

</form>


@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
