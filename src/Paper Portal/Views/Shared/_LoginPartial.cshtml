@using System.Security.Claims

@if (User.IsSignedIn())
{
    <a class="mdl-navigation__link" asp-controller="Manage" asp-action="Index" title="Manage">Hello&nbsp;@User.GetUserName()!</a>
    <a class="mdl-navigation__link" asp-controller="Account" asp-action="LogOff">Log&nbsp;off</a>
}
else
{
    <a class="mdl-navigation__link" asp-controller="Account" asp-action="Register">Register</a>
    <a class="mdl-navigation__link" asp-controller="Account" asp-action="Login">Log&nbsp;in</a>
}
