@model Paper_Portal.ViewModels.Manage.EditVM
@using Paper_Portal.Helpers;

@{
    ViewData["Title"] = "View";
}

<h2>View</h2>

<form asp-action="View">
    <div class="well col-md-offset-1 col-md-11">
        <div class="form-horizontal">
            <h4>Edit</h4>
            <hr />
            <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
            <div class="form-group label-floating">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            @{
                if (User.IsInRole(RoleHelper.Teacher))
                {
                    <div id="dept" class="form-group label-floating">
                        <label asp-for="DepartmentId" class="control-label"></label>
                        <select asp-for="DepartmentId" asp-items="@ViewBag.Departments" class="form-control"></select>

                        <span asp-validation-for="DepartmentId" class="text-danger"></span>
                    </div>
                }
            }
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
