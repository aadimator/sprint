@model Sprint.Models.PaperViewModels.CreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h2 class="mdl-color-text--primary-contrast">@ViewData["Title"]</h2>

<div class="well col-md-offset-1 col-md-10">
    <form asp-action="Create" enctype="multipart/form-data">

        <h4>Paper</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row">
            <div class="col-md-6">
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <label asp-for="Title" class="mdl-textfield__label"></label>
                    <input asp-for="Title" class="mdl-textfield__input" />
                    <span asp-validation-for="Title" class="mdl-textfield__error" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--file">
                    <input asp-for="File" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <label asp-for="Copies" class="mdl-textfield__label"></label>
                    <input asp-for="Copies" class="mdl-textfield__input" />
                    <span asp-validation-for="Copies" class="text-danger" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <label asp-for="Comment" class="mdl-textfield__label"></label>
                    <textarea asp-for="Comment" class="mdl-textfield__input"></textarea>
                </div>
            </div>
        </div>
        <hr />
        <div class="col-md-4 col-md-offset-4">
            <div class="form-group">
                <a class="mdl-button mdl-js-button mdl-js-ripple-effect" asp-action="Index">Back to List</a>
                <input type="submit" value="Create" class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--primary " />
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
