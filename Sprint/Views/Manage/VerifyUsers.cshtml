@model IEnumerable<Sprint.Models.ManageViewModels.VerifyUsersViewModel>

@{
    ViewData["Title"] = "Verify Users";
}

<h2 class="text-primary-color">@ViewData["Title"]</h2>

    <div class="well col-md-10 col-md-offset-1">
        <form asp-controller="Manage" asp-action="Verify" method="post" class="form-horizontal" role="form">
            <div class="form-group">
                <div class="checkbox checkbox-inline">
                    <label>
                        <input type="checkbox" class="checkbox-inline" id="toggleAll" /> Check All
                    </label>
                </div>
                <button class="btn btn-primary btn-raised pull-right" type="submit">Verify</button>
            </div>
            <table class="table">
                <tr>
                    <th>
                        @Html.Raw("Verify")
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FullName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Department)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmailConfirmed)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td style="vertical-align:middle;">
                            <div class="checkbox checkbox-inline">
                                <label>
                                    <input type="checkbox" name="selected" value="@item.Id" />
                                </label>
                            </div>
                        </td>
                        <td style="vertical-align:middle;">
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td style="vertical-align:middle;">
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td style="vertical-align:middle;">
                            @Html.DisplayFor(modelItem => item.Department)
                        </td>
                        <td style="vertical-align:middle;">
                            <div class="checkbox checkbox-inline">
                                <label>
                                    <input asp-for="@item.EmailConfirmed" class="checkbox checkbox-inline" disabled />
                                </label>
                            </div>
                        </td>
                        <td style="vertical-align:middle;">
                            <a asp-action="VerifyUser" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Verify</a>
                        </td>
                    </tr>
                }
            </table>
        </form>
    </div>
    @section Scripts {
        @{ await Html.RenderPartialAsync("_CheckAllScriptPartial");}
    }
