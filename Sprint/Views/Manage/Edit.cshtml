@model Sprint.Models.ManageViewModels.EditViewModel
@using Sprint.Helpers;

@{
    ViewData["Title"] = "Edit";
}

<h2 class="text-primary-color">@ViewData["Title"]</h2>

<form asp-controller="Manage" asp-action="Edit" method="post" class="form-horizontal" role="form">
    <div class="well col-md-offset-1 col-md-10">
        <div class="form-horizontal">
            <h4>Edit</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group label-floating">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                </div>
                @{
                    if (User.IsInRole(RoleHelper.Teacher))
                    {
                        <div class="col-md-6">
                            <div id="dept" class="form-group label-floating">
                                <label asp-for="DepartmentId" class="control-label"></label>
                                <select asp-for="DepartmentId" asp-items="@ViewBag.Departments" class="form-control"></select>
                                <span asp-validation-for="DepartmentId" class="text-danger"></span>
                            </div>
                        </div>
                    }
                }
            </div>
            <div class="form-group">
                <div class="col-md-offset-4 col-md-4">
                    <a class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--raised" asp-action="Index">Back to Profile</a>
                    <button type="submit" class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--accent mdl-button--raised">Save</button>
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
