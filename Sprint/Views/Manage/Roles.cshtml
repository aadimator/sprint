@model Sprint.Models.ManageViewModels.RolesViewModel
@using Sprint.Helpers;
@{
    ViewData["Title"] = "Manage Roles";
}

<h2 class="text-primary-color">@ViewData["Title"]</h2>

<div class="well col-md-4 col-md-offset-4">
    <form asp-action="Roles" method="post">
        @Html.AntiForgeryToken()

        @Html.HiddenFor(m => m.FullName)
        @Html.HiddenFor(m => m.Email)
        @Html.HiddenFor(m => m.Id)
        <h3 class="mdl-color-text--primary">@Model.FullName</h3>

        <h4>Roles</h4>

        @for (var i = 0; i < Model.Roles.Count(); i++)
        {
            <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect">
                @Html.CheckBoxFor(model => model.Roles[i].Selected, new { @class = "mdl-checkbox__input" })
                <span class="mdl-checkbox__label">@Html.DisplayFor(model => model.Roles[i].Name)</span>
            </label>

            @Html.HiddenFor(model => @Model.Roles[i].Name)

        }

        <button class="mdl-button mdl-button--raised mdl-button--primary pull-right" type="submit">Save</button>
    </form>
</div>