@model ChangeEmailViewModel
@{
    ViewData["Title"] = "Change Email";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Manage" asp-action="ChangeEmail" method="post" class="form-horizontal" role="form">
    <div class="well col-md-offset-1 col-md-11">
        <h4 class="text-center">Change Email Form</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group label-floating col-md-6">
            <label asp-for="OldPassword" class="control-label"></label>
            <input asp-for="OldPassword" class="form-control input-fields" />
            <span asp-validation-for="OldPassword" class="text-danger" />
        </div>
        <div class="form-group label-floating col-md-6">
            <label asp-for="NewEmail" class="control-label"></label>
            <input asp-for="NewEmail" class="form-control input-fields" />
            <span asp-validation-for="NewEmail" class="text-danger" />
        </div>
        <div class="form-group col-md-6">
            <a class="btn btn-default" asp-action="Index">Back</a>
            <button type="submit" class="btn btn-primary">Change Email</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
