@model IndexViewModel
@using Sprint.Helpers;
@{
    ViewData["Title"] = "Manage";
}

<h2 class="mdl-color-text--primary-contrast">@ViewData["Title"]</h2>

<div class="well col-md-10 col-md-offset-1">
    <form>
        <fieldset>
            <legend>Account Details</legend>
            <div class="col-md-6">
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <label asp-for="FullName" class="mdl-textfield__label"></label>
                    <input asp-for="FullName" class="mdl-textfield__input" disabled />
                </div>
                @{
                    if (User.IsInRole(RoleHelper.Teacher))
                    {
                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                            <label asp-for="Department" class="mdl-textfield__label"></label>
                            <input asp-for="Department" class="mdl-textfield__input" disabled />
                        </div>

                    }
                }
                
            </div>
            <div class="col-md-6">
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <label asp-for="Email" class="mdl-textfield__label"></label>
                    <input asp-for="Email" class="mdl-textfield__input" disabled />
                </div>
            </div>
        </fieldset>
        <hr />
        <fieldset>
            @*<a asp-controller="Manage" asp-action="ChangeEmail" class="btn btn-danger">Change Email</a>*@
            <div class="col-md-4 col-md-offset-4">
                <a asp-controller="Manage" asp-action="Edit" class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--primary ">Edit</a>
                <a asp-controller="Manage" asp-action="ChangePassword" class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--accent ">Change Password</a>
            </div>
        </fieldset>

    </form>
</div>